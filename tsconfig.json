{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": true,
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "lib": [
            "ES2021",
            "esnext.asynciterable"
        ],
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ]
}